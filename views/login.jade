extends layout

block content
    .container
        .row
            .offset-by-three.six.columns
                h4 Login
                form(action="" method="post")
                    label(for="email") Email 
                    input.u-full-width(type="email" name="email" id="email" autofocus="true")
                    label(for="password") Password
                    input.u-full-width(type="password" name="password" id="password")
                    p
                        a(href="/login/forgot") Forgot your password?
                    input(type="submit" value="Login")

