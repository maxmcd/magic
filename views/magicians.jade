extends layout

block content
    .container
        .row
            .offset-by-three.six.columns
                h4 Add Magician
                form(action="/magicians/add/" method="post")
                    label(for="email") Email 
                    input.u-full-width(type="email" name="email" id="email" autofocus="true")
                    label(for="password") Password
                    input.u-full-width(type="password" name="password" id="password")
                    input(type="submit" value="Create")
        if magicians
            .row
                table.u-full-width
                    thead
                        tr
                            th Email
                    tbody 
                        each magician in magicians
                            tr
                                td= magician.email
